<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :first_name %><br />
  <%= f.text_field :first_name, autofocus: true %></div>

  <div><%= f.label :last_name %><br />
  <%= f.text_field :last_name %></div>

  <div><%= f.label :email %><br />
  <%= f.email_field :email %></div>

  <div><%= f.label :country_id %><br />
  <%= f.collection_select :country_id, Country.all_sorted_and_cached, :id, :name, prompt: 'Country' %></div>

  <div>
    I agree to the <%= link_to 'Terms and Conditions', privacy_policy_path, target: '_blank' %><br />
    I understand the <%= link_to 'Privacy Policy', terms_path, target: '_blank' %>
  </div>

  <div>
    <%= f.check_box :terms_of_service %>
    <%= f.label :terms_of_service, 'I agree to these terms' %>
  </div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>
